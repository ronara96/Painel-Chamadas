{
  "manifest_version": 3,
  "name": "Painel de Chamadas Nova Aba (v4)",
  "version": "4.0",
  "description": "Abre uma nova aba para seleção de destino.",
  "action": { 
    "default_title": "Abrir Painel"
  },
  "permissions": [
    "scripting",
    "tabs" // Permissão crucial para abrir a nova aba
  ],
  "host_permissions": [
    "https://painel-chamadas.onrender.com/*", 
    "https://esus.pnl.mg.gov.br/*" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://esus.pnl.mg.gov.br/lista-atendimento/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  // CORREÇÃO: painel_tab.js ADICIONADO AQUI
  "web_accessible_resources": [
    {
      "resources": [ "painel_tab.html", "painel_tab.js" ], 
      "matches": [ "https://esus.pnl.mg.gov.br/*" ]
    }
  ]
}