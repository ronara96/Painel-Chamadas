{
  "manifest_version": 3,
  "name": "Painel de Chamadas Pop-up (v2)",
  "version": "2.0",
  "description": "Substitui o robo.py por um pop-up na extensão.",
  "action": { 
    "default_title": "Enviar Chamada",
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    // CORREÇÃO 1: Permissão para a API Render (SEU SERVIDOR)
    "https://painel-chamadas.onrender.com/*", 
    // CORREÇÃO 2: Permissão para o NOVO sistema de lista de atendimento
    "https://esus.pnl.mg.gov.br/*" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      // CORREÇÃO PRINCIPAL AQUI: O content.js só deve rodar no NOVO endereço!
      "matches": [
        "https://esus.pnl.mg.gov.br/lista-atendimento*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
