{
  "manifest_version": 3,
  "name": "Painel de Chamadas Flutuante (v3)",
  "version": "3.0",
  "description": "Painel flutuante injetado no site para chamada imediata.",
  "action": { 
    "default_title": "Painel Flutuante"
    // REMOVIDA A REFERÊNCIA A "default_popup": "popup.html"
  },
  "permissions": [
    "scripting",
    "activeTab" // Mantemos, mas menos crucial agora
    // REMOVIDA A PERMISSÃO "storage"
  ],
  "host_permissions": [
    // Seu servidor Render
    "https://painel-chamadas.onrender.com/*", 
    // NOVO SISTEMA
    "https://esus.pnl.mg.gov.br/*" 
  ],
  // REMOVIDO TODO O BLOCO "background"
  "content_scripts": [
    {
      "matches": [
        "https://esus.pnl.mg.gov.br/lista-atendimento/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}